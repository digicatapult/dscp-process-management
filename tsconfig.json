{
  "compilerOptions": {
    "outDir": "./lib",
    "lib": ["es6", "es2015", "dom"],
    "types": ["node"],
    "resolveJsonModule": true,
    "target": "es2016",
    "module": "es6",
    "moduleResolution": "node",                       
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true                                 
  }
}
